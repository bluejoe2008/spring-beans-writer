package cn.csdb.commons.vo;

import javax.xml.bind.annotation.XmlAccessType;
import javax.xml.bind.annotation.XmlAccessorType;
import javax.xml.bind.annotation.XmlAttribute;
import javax.xml.bind.annotation.XmlElement;

import org.simpleframework.xml.Attribute;
import org.simpleframework.xml.Element;

import cn.csdb.commons.xmlbeans.writer.format.XmlProperty;

@XmlAccessorType(XmlAccessType.PROPERTY)
public class Field
{
	@Attribute(name = "id")
	private int _id;

	@Element(name = "Length")
	private long _length;

	@Element(name = "DefaultValue", required = false)
	private String _defaultValue;

	@Element(name = "NullValue")
	private boolean _nullValue;

	@XmlAttribute(name = "id")
	public int getId()
	{
		return _id;
	}

	@XmlProperty
	public void setId(int id)
	{
		_id = id;
	}

	@XmlElement(name = "Length")
	public long getLength()
	{
		return _length;
	}

	@XmlProperty
	public void setLength(long length)
	{
		_length = length;
	}

	@XmlElement(name = "DefaultValue", required = false)
	public String getDefaultValue()
	{
		return _defaultValue;
	}

	@XmlProperty
	public void setDefaultValue(String defaultValue)
	{
		_defaultValue = defaultValue;
	}

	@XmlElement(name = "NullValue")
	public boolean isNullValue()
	{
		return _nullValue;
	}

	@XmlProperty
	public void setNullValue(boolean nullValue)
	{
		_nullValue = nullValue;
	}
}
